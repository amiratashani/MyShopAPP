<?xml version="1.0" encoding="utf-8"?>
<layout>


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_pure"
        android:paddingLeft="@dimen/product_list_standard_margin"
        android:paddingRight="@dimen/product_list_standard_margin">

        <TextView
            android:id="@+id/price_start_from_label"
            android:layout_width="wrap_content"
            android:layout_height="50.0dip"
            android:layout_alignBaseline="@+id/min_price"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="16.0dip"
            android:layout_marginEnd="8.0dip"
            android:gravity="center_vertical"
            android:text="@string/filter_from"
            android:textColor="@color/black_light"
            android:textSize="14.0sp"
            android:visibility="visible" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/min_price"
            android:layout_width="150dp"
            android:layout_height="50.0dip"
            android:layout_marginTop="24.0dip"
            android:layout_toStartOf="@id/price_start_from_label"
            android:inputType="number"
            android:background="@drawable/edittext_modified_states"
            android:visibility="visible" />

        <TextView
            android:id="@+id/price_to_label"
            android:layout_width="wrap_content"
            android:layout_height="50.0dip"
            android:layout_below="@id/price_start_from_label"
            android:layout_alignBaseline="@+id/max_price"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="16.0dip"
            android:layout_marginEnd="8.0dip"
            android:gravity="center_vertical"
            android:text="@string/filter_to"
            android:textColor="@color/black_light"
            android:textSize="14.0sp"
            android:visibility="visible" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/max_price"
            android:layout_width="150dp"
            android:inputType="number"
            android:layout_height="50.0dip"
            android:layout_below="@id/min_price"
            android:layout_marginTop="24.0dip"
            android:layout_toStartOf="@id/price_to_label"
            android:background="@drawable/edittext_modified_states"
            android:visibility="visible" />
    </RelativeLayout>
</layout>