<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black_light">

        <TextView
            android:id="@+id/filter_attributes_counter"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/product_list_standard_margin"
            android:visibility="visible" />

        <TextView
            android:id="@+id/item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/product_list_standard_margin"
            android:layout_toEndOf="@+id/filter_attributes_counter"
            android:gravity="end"
            android:minHeight="52.0dip"
            android:padding="8.0dip"
            android:textColor="@color/white_pure"
            android:textSize="14.0sp" />
    </RelativeLayout>
</layout>